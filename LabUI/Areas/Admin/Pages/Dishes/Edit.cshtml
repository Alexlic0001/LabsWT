@page
@model LabUI.Areas.Admin.Pages.Dishes.EditModel

@{
    ViewData["Title"] = "Редактировать блюдо";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-pen-to-square me-2"></i>Редактировать блюдо
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Dish.Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dish.Name" class="form-label">
                                        <i class="fa-solid fa-tag me-1"></i>Название блюда
                                    </label>
                                    <input asp-for="Dish.Name" class="form-control" />
                                    <span asp-validation-for="Dish.Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Dish.Price" class="form-label">
                                        <i class="fa-solid fa-ruble-sign me-1"></i>Цена (руб.)
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Dish.Price" class="form-control"
                                               type="number" step="0.01" min="0" />
                                        <span class="input-group-text">₽</span>
                                    </div>
                                    <span asp-validation-for="Dish.Price" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Dish.CategoryId" class="form-label">
                                        <i class="fa-solid fa-list me-1"></i>Категория
                                    </label>
                                    <select asp-for="Dish.CategoryId" class="form-select"
                                            asp-items="Model.Categories">
                                        <option value="">-- Выберите категорию --</option>
                                    </select>
                                    <span asp-validation-for="Dish.CategoryId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dish.Description" class="form-label">
                                        <i class="fa-solid fa-file-lines me-1"></i>Описание
                                    </label>
                                    <textarea asp-for="Dish.Description" class="form-control"
                                              rows="4"></textarea>
                                    <span asp-validation-for="Dish.Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fa-solid fa-image me-1"></i>Текущее изображение
                                    </label>
                                    @if (!string.IsNullOrEmpty(Model.Dish.Image))
                                    {
                                        <div class="text-center">
                                            <img src="@Model.Dish.Image"
                                                 alt="@Model.Dish.Name"
                                                 class="img-thumbnail mb-2"
                                                 style="max-width: 200px;" />
                                        </div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Image" class="form-label">
                                        <i class="fa-solid fa-upload me-1"></i>Новое изображение
                                    </label>
                                    <input asp-for="Image" class="form-control"
                                           type="file" accept=".jpg,.jpeg,.png,.gif,.webp" />
                                    <div class="form-text">
                                        Оставьте пустым, чтобы сохранить текущее изображение
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Вернуться к списку
                                </a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Сохранить изменения
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}