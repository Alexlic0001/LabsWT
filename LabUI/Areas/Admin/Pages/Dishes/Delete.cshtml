@page
@model LabUI.Areas.Admin.Pages.Dishes.DeleteModel

@{
    ViewData["Title"] = "Удалить блюдо";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>Подтверждение удаления
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fa-solid fa-warning me-2"></i>Внимание!
                        </h5>
                        <p class="mb-0">Вы собираетесь удалить блюдо. Это действие необратимо.</p>
                    </div>

                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.Dish.Image))
                        {
                            <img src="@Model.Dish.Image"
                                 alt="@Model.Dish.Name"
                                 class="img-thumbnail mb-3"
                                 style="max-width: 200px;" />
                        }
                        <h4 class="text-danger">@Model.Dish.Name</h4>
                        @if (!string.IsNullOrEmpty(Model.Dish.Description))
                        {
                            <p class="text-muted">@Model.Dish.Description</p>
                        }
                        <p>
                            <strong>Цена:</strong>
                            <span class="badge bg-secondary fs-6">@Model.Dish.Price.ToString("N2") ₽</span>
                        </p>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Dish.Id" />

                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Отмена
                                </a>
                                <button type="submit" class="btn btn-danger px-4"
                                        onclick="return confirm('Вы уверены, что хотите удалить это блюдо?')">
                                    <i class="fa-solid fa-trash-can me-2"></i>Да, удалить
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!confirm('Внимание! Удаление блюда приведет к безвозвратной потере данных.\n\nВы уверены, что хотите продолжить?')) {
                e.preventDefault();
            }
        });
    </script>
}