@page
@model LabUI.Areas.Admin.Pages.Dishes.CreateModel

@{
    ViewData["Title"] = "Добавить блюдо";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-circle-plus me-2"></i>Добавить новое блюдо
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dish.Name" class="form-label required">
                                        <i class="fa-solid fa-tag me-1"></i>Название блюда
                                    </label>
                                    <input asp-for="Dish.Name" class="form-control"
                                           placeholder="Введите название блюда" />
                                    <span asp-validation-for="Dish.Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Dish.Price" class="form-label required">
                                        <i class="fa-solid fa-ruble-sign me-1"></i>Цена (руб.)
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Dish.Price" class="form-control"
                                               type="number" step="0.01" min="0"
                                               placeholder="0.00" />
                                        <span class="input-group-text">₽</span>
                                    </div>
                                    <span asp-validation-for="Dish.Price" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Dish.CategoryId" class="form-label required">
                                        <i class="fa-solid fa-list me-1"></i>Категория
                                    </label>
                                    <select asp-for="Dish.CategoryId" class="form-select"
                                            asp-items="@(ViewData["CategoryId"] as SelectList)">
                                        <option value="">-- Выберите категорию --</option>
                                    </select>
                                    <span asp-validation-for="Dish.CategoryId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dish.Description" class="form-label">
                                        <i class="fa-solid fa-file-lines me-1"></i>Описание
                                    </label>
                                    <textarea asp-for="Dish.Description" class="form-control"
                                              rows="4" placeholder="Описание блюда..."></textarea>
                                    <div class="form-text">Максимум 500 символов</div>
                                    <span asp-validation-for="Dish.Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Image" class="form-label">
                                        <i class="fa-solid fa-image me-1"></i>Изображение блюда
                                    </label>
                                    <input asp-for="Image" class="form-control"
                                           type="file" accept=".jpg,.jpeg,.png,.gif,.webp"
                                           id="imageInput" />
                                    <div class="form-text">
                                        Поддерживаемые форматы: JPG, PNG, GIF, WebP. Максимальный размер: 5MB
                                    </div>
                                    <span asp-validation-for="Image" class="text-danger small"></span>
                                </div>

                                <div id="imagePreview" class="mt-3 text-center" style="display: none;">
                                    <p class="text-muted small mb-2">Предпросмотр:</p>
                                    <img id="previewImage" class="img-thumbnail"
                                         style="max-width: 200px; max-height: 200px;"
                                         alt="Предпросмотр изображения" />
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Вернуться к списку
                                </a>
                                <button type="submit" class="btn btn-success px-4">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Сохранить блюдо
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
   
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('imagePreview');
            const previewImage = document.getElementById('previewImage');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);

                
                const maxSize = 5 * 1024 * 1024; // 
                if (file.size > maxSize) {
                    alert('Файл слишком большой. Максимальный размер: 5MB');
                    this.value = '';
                    preview.style.display = 'none';
                }
            } else {
                preview.style.display = 'none';
            }
        });

        
        document.getElementById('Dish_Description').addEventListener('input', function(e) {
            const maxLength = 500;
            if (this.value.length > maxLength) {
                this.value = this.value.substring(0, maxLength);
            }
        });
    </script>
}