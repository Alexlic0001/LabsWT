@using LabUI.Models
@model Cart

@{
    var cart = Model;
}

@if (cart != null && cart.Count > 0)
{
    <a asp-action="Index" asp-controller="Cart" class="nav-link text-white me-3">
        <i class="fa-solid fa-cart-shopping me-1"></i>
        <span class="badge bg-danger rounded-pill">@cart.Count</span>
        <span class="d-none d-md-inline">@cart.TotalPrice.ToString("N2") ₽</span>
    </a>
}
else
{
    <a asp-action="Index" asp-controller="Cart" class="nav-link text-white me-3">
        <i class="fa-solid fa-cart-shopping me-1"></i>
        <span class="d-none d-md-inline">Корзина</span>
    </a>
}
<a asp-controller="cart" asp-action="index" class="navbar-text ms-auto">
    00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)
</a>
