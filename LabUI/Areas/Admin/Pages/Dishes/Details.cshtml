@page
@model LabUI.Areas.Admin.Pages.Dishes.DetailsModel

@{
    ViewData["Title"] = "Детали блюда";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-circle-info me-2"></i>Детали блюда
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Изображение -->
                        <div class="col-md-5 text-center mb-4 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.Dish.Image))
                            {
                                <img src="@Model.Dish.Image"
                                     alt="@Model.Dish.Name"
                                     class="img-fluid rounded shadow"
                                     style="max-height: 300px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                     style="height: 300px;">
                                    <div>
                                        <i class="fa-solid fa-image fa-4x text-muted mb-3"></i>
                                        <p class="text-muted">Изображение отсутствует</p>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Информация -->
                        <div class="col-md-7">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fa-solid fa-tag me-1"></i>Название:
                                </dt>
                                <dd class="col-sm-8">
                                    <h4 class="text-primary">@Model.Dish.Name</h4>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa-solid fa-ruble-sign me-1"></i>Цена:
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success fs-5">
                                        @Model.Dish.Price.ToString("N2") ₽
                                    </span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa-solid fa-list me-1"></i>Категория:
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Dish.Category?.Name</span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa-solid fa-calendar me-1"></i>ID:
                                </dt>
                                <dd class="col-sm-8">
                                    <code>@Model.Dish.Id</code>
                                </dd>
                            </dl>

                            <!-- Описание -->
                            <div class="mt-4">
                                <h5 class="border-bottom pb-2">
                                    <i class="fa-solid fa-file-lines me-2"></i>Описание
                                </h5>
                                <div class="bg-light p-3 rounded">
                                    @if (!string.IsNullOrEmpty(Model.Dish.Description))
                                    {
                                        <p class="mb-0">@Model.Dish.Description</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">Описание отсутствует</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Действия -->
                    <div class="mt-4 pt-3 border-top">
                        <div class="d-flex justify-content-center">
                            <a asp-page="Edit" asp-route-id="@Model.Dish.Id"
                               class="btn btn-warning me-2">
                                <i class="fa-solid fa-pen-to-square me-2"></i>Редактировать
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.Dish.Id"
                               class="btn btn-danger me-2">
                                <i class="fa-solid fa-trash me-2"></i>Удалить
                            </a>
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i>Вернуться к списку
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>