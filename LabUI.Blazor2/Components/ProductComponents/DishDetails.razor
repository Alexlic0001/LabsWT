@using LabUI.Models

@if (Dish != null)
{
    <div class="card mt-5 shadow-sm" style="width: 20rem;">
        @if (!string.IsNullOrEmpty(Dish.Image))
        {
            <img src="@Dish.Image" class="card-img-top"
                 alt="@Dish.Name" style="height: 200px; object-fit: cover;">
        }
        else
        {
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                 style="height: 200px;">
                <span class="text-muted">Нет изображения</span>
            </div>
        }
        <div class="card-body">
            <h5 class="card-title">@Dish.Name</h5>

            @if (!string.IsNullOrEmpty(Dish.Description))
            {
                <p class="card-text">@Dish.Description</p>
            }

            <div class="d-flex justify-content-between align-items-center">
                <span class="h5 mb-0 text-primary">@Dish.Price.ToString("C")</span>

                <!-- Убрали Calories, так как его нет в модели -->
                <!-- Можно добавить другую информацию, если нужно -->
                @if (Dish.CategoryId > 0)
                {
                    <span class="badge bg-secondary">ID: @Dish.CategoryId</span>
                }
            </div>

            @if (Dish.Category != null)
            {
                <div class="mt-2">
                    <span class="badge bg-info">@Dish.Category.Name</span>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-secondary mt-5" style="width: 20rem;">
        <h5>Выберите блюдо</h5>
        <p class="mb-0">Нажмите "Подробно" на любом блюде из списка</p>
    </div>
}

@code {
    [Parameter]
    public Dish? Dish { get; set; }
}