@page
@model LabUI.Areas.Admin.Pages.Dishes.EditModel

@{
    ViewData["Title"] = "Редактирование блюда";
}

<h1>Редактирование блюда</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Dish.Id" />

            <div class="form-group mb-3">
                <label asp-for="Dish.Name" class="control-label">Название</label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dish.Description" class="control-label">Описание</label>
                <textarea asp-for="Dish.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Dish.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dish.Price" class="control-label">Цена</label>
                <div class="input-group">
                    <input asp-for="Dish.Price" class="form-control" type="number" step="0.01" min="0" />
                    <span class="input-group-text">₽</span>
                </div>
                <span asp-validation-for="Dish.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dish.CategoryId" class="control-label">Категория</label>
                <select asp-for="Dish.CategoryId" class="form-control"
                        asp-items="@(ViewData["CategoryId"] as SelectList)">
                    <option value="">Выберите категорию</option>
                </select>
                <span asp-validation-for="Dish.CategoryId" class="text-danger"></span>
            </div>

            <!-- Текущее изображение -->
            <div class="form-group mb-3">
                <label class="control-label">Текущее изображение</label>
                <div class="mt-2">
                    @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                    {
                        <img src="@Model.CurrentImageUrl"
                             alt="@Model.Dish.Name"
                             class="img-thumbnail"
                             style="max-width: 200px; max-height: 200px;" />
                        <div class="form-text mt-1">
                            Текущее изображение
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Изображение не установлено
                        </div>
                    }
                </div>
            </div>

            <!-- Загрузка нового изображения -->
            <div class="form-group mb-3">
                <label asp-for="NewImage" class="control-label">Новое изображение (оставьте пустым, чтобы не изменять)</label>
                <input asp-for="NewImage" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
                <div class="form-text">
                    Поддерживаемые форматы: .jpg, .jpeg, .png, .gif. Максимальный размер: 5MB.
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="d-flex gap-2">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
                    <a asp-page="./Details" asp-route-id="@Model.Dish.Id" class="btn btn-info">Просмотр</a>
                </div>
            </div>
        </form>
    </div>

    <!-- Информационная панель -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Информация о редактировании</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <strong>ID блюда:</strong> @Model.Dish.Id
                </p>
                <p class="card-text">
                    <strong>Дата создания:</strong> @DateTime.Now.ToString("dd.MM.yyyy")
                </p>
                <div class="alert alert-info mt-3">
                    <h6 class="alert-heading">Рекомендации:</h6>
                    <ul class="mb-0">
                        <li>Для изменения изображения загрузите новый файл</li>
                        <li>Если оставить поле изображения пустым, старое изображение сохранится</li>
                        <li>Убедитесь, что цена указана корректно</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Валидация размера файла
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const maxSize = 5 * 1024 * 1024; // 5MB
                if (file.size > maxSize) {
                    alert('Файл слишком большой. Максимальный размер: 5MB');
                    e.target.value = '';
                }
            }
        });
    </script>
}