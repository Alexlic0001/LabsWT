@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "admin")]

@{
    ViewData["Title"] = "Административная панель";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4 mb-4">
                <i class="fas fa-cogs text-primary"></i> Административная панель
            </h1>

            <div class="row mt-5">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-utensils fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Управление блюдами</h5>
                            <p class="card-text">Добавление, редактирование и удаление блюд</p>
                            <a asp-area="Admin" asp-page="/Dishes/Index"
                               class="btn btn-primary stretched-link">
                                Перейти <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-list fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Категории</h5>
                            <p class="card-text">Управление категориями блюд</p>
                            <a href="#" class="btn btn-success stretched-link">
                                Перейти <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                            <h5 class="card-title">Статистика</h5>
                            <p class="card-text">Просмотр статистики и отчетов</p>
                            <a href="#" class="btn btn-info stretched-link">
                                Перейти <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>