@page
@model LabUI.Areas.Admin.Pages.Dishes.EditModel

@{
    ViewData["Title"] = "Редактировать блюдо";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-pen-to-square me-2"></i>Редактировать блюдо
                    </h3>
                </div>
                <div class="card-body">
                   
                    <div class="alert alert-info mb-3" id="debugInfo">
                        <div><strong>Отладка:</strong></div>
                        <div>ID блюда: <span id="debugId">@Model.Dish.Id</span></div>
                        <div>Имя файла: <span id="debugFileName">не выбран</span></div>
                        <div>Размер файла: <span id="debugFileSize">0</span> байт</div>
                    </div>

                    <form method="post" enctype="multipart/form-data" id="editForm">
                        <input type="hidden" asp-for="Dish.Id" id="dishId" value="@Model.Dish.Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dish.Name" class="form-label">
                                        <i class="fa-solid fa-tag me-1"></i>Название блюда
                                    </label>
                                    <input asp-for="Dish.Name" class="form-control" id="dishName" />
                                    <span asp-validation-for="Dish.Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Dish.Price" class="form-label">
                                        <i class="fa-solid fa-ruble-sign me-1"></i>Цена (руб.)
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Dish.Price" class="form-control"
                                               type="number" step="0.01" min="0" id="dishPrice" />
                                        <span class="input-group-text">₽</span>
                                    </div>
                                    <span asp-validation-for="Dish.Price" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Dish.CategoryId" class="form-label">
                                        <i class="fa-solid fa-list me-1"></i>Категория
                                    </label>
                                    <select asp-for="Dish.CategoryId" class="form-select"
                                            asp-items="Model.Categories" id="dishCategory">
                                        <option value="">-- Выберите категорию --</option>
                                    </select>
                                    <span asp-validation-for="Dish.CategoryId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dish.Description" class="form-label">
                                        <i class="fa-solid fa-file-lines me-1"></i>Описание
                                    </label>
                                    <textarea asp-for="Dish.Description" class="form-control"
                                              rows="4" id="dishDescription"></textarea>
                                    <span asp-validation-for="Dish.Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fa-solid fa-image me-1"></i>Текущее изображение
                                    </label>
                                    @if (!string.IsNullOrEmpty(Model.Dish.Image))
                                    {
                                        <div class="text-center">
                                            <img src="@Model.Dish.Image"
                                                 alt="@Model.Dish.Name"
                                                 class="img-thumbnail mb-2"
                                                 style="max-width: 200px;"
                                                 id="currentImage" />
                                            <div class="form-text">
                                                Текущий URL: <code id="currentImageUrl">@Model.Dish.Image</code>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary py-2">
                                            <i class="fa-solid fa-image me-2"></i>
                                            Изображение отсутствует
                                        </div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Image" class="form-label">
                                        <i class="fa-solid fa-upload me-1"></i>Новое изображение
                                    </label>
                                    <input asp-for="Image" class="form-control"
                                           type="file"
                                           accept=".jpg,.jpeg,.png,.gif,.webp"
                                           id="imageInput" />
                                    <div class="form-text">
                                        Оставьте пустым, чтобы сохранить текущее изображение
                                    </div>
                                  
                                    <div id="fileInfo" class="text-muted small mt-1"></div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Вернуться к списку
                                </a>
                                <button type="submit" class="btn btn-primary px-4" id="submitBtn">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Сохранить изменения
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const fileInfo = document.getElementById('fileInfo');
            const debugFileName = document.getElementById('debugFileName');
            const debugFileSize = document.getElementById('debugFileSize');

            if (file) {
                fileInfo.innerHTML = `
                    <strong>Отладка файла:</strong><br>
                    Имя: ${file.name}<br>
                    Размер: ${(file.size / 1024).toFixed(2)} KB<br>
                    Тип: ${file.type}<br>
                    Последнее изменение: ${new Date(file.lastModified).toLocaleString()}
                `;

                debugFileName.textContent = file.name;
                debugFileSize.textContent = file.size;

                console.log('Файл выбран:', {
                    name: file.name,
                    size: file.size,
                    type: file.type,
                    lastModified: file.lastModified
                });
            } else {
                fileInfo.innerHTML = 'Файл не выбран';
                debugFileName.textContent = 'не выбран';
                debugFileSize.textContent = '0';
                console.log('Файл не выбран');
            }
        });

        
        document.getElementById('editForm').addEventListener('submit', function(e) {
            const fileInput = document.getElementById('imageInput');
            const file = fileInput.files[0];
            const formData = new FormData(this);

            console.log('=== НАЧАЛО ОТПРАВКИ ФОРМЫ ===');
            console.log('ID блюда:', document.getElementById('dishId').value);
            console.log('Название:', document.getElementById('dishName').value);
            console.log('Цена:', document.getElementById('dishPrice').value);

            
            console.log('Данные FormData:');
            for (let [key, value] of formData.entries()) {
                if (key === 'Image' && value instanceof File) {
                    console.log(`  ${key}: File {name: "${value.name}", size: ${value.size}, type: "${value.type}"}`);
                } else {
                    console.log(`  ${key}:`, value);
                }
            }

            console.log('Файл в форме:', file ? `"${file.name}" (${file.size} байт)` : 'нет');
            console.log('=== КОНЕЦ ОТПРАВКИ ФОРМЫ ===');

         
        });

        
        document.addEventListener('DOMContentLoaded', function() {
            
            const debugBtn = document.createElement('button');
            debugBtn.type = 'button';
            debugBtn.className = 'btn btn-outline-info btn-sm ms-2';
            debugBtn.innerHTML = '<i class="fa-solid fa-bug me-1"></i>Тест';
            debugBtn.onclick = testFormSubmission;

            document.getElementById('submitBtn').parentNode.appendChild(debugBtn);

            function testFormSubmission() {
                console.log('=== ТЕСТОВАЯ ОТПРАВКА ===');

                
                const testFile = new File(['test image content'], 'test-image.jpg', {
                    type: 'image/jpeg',
                    lastModified: Date.now()
                });

              
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(testFile);
                document.getElementById('imageInput').files = dataTransfer.files;

               
                document.getElementById('imageInput').dispatchEvent(new Event('change'));

                console.log('Тестовый файл установлен:', testFile.name);

               
                setTimeout(() => {
                    console.log('Автоматическая отправка формы...');
                    document.getElementById('editForm').submit();
                }, 1000);
            }
        });
    </script>
}